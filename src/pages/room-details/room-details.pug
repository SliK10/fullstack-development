extends ../../views/layout/main.pug
include ../../components/header/header.pug
include ../../components/__comfort/comfort.pug
include ../../components/to-book/to-book.pug

block title
  title Room details

block content
  +header([{
          link: '#',
          link_name: 'О нас'
        },
        {
          link: '#',
          link_name: 'Услуги',
          expand_more: true,
        },
        {
          link: '#',
          link_name: 'Вакансии',
        },
        {
          link: '#',
          link_name: 'Новости'
        },
        {
          link: '#',
          link_name: 'Соглашения',
          expand_more: true,
        },], {login: 'Войти', register: 'Зарегистрироваться'})
  .block-photo
    .block-photo__main-photo(style="background-image: url(/assets/img/room-details-mainimg.png)")
    .block-photo__mini-photo
      .photo__up(style="background-image: url(/assets/img/room-details-upphoto.png)")
      .photo__down(style="background-image: url(/assets/img/room-details-downphoto.png)")
  .page__row
    .room
      .room__cell
        .room__information
          .name-of-block Сведения о номере
          +comfort([{materialIcons: "insert_emoticon",
            name: "Комфорт",
            description: "Шумопоглощающие стены"},
            {materialIcons: "location_city",
            name: "Удобство",
            description: "Окно в каждой из спален"},
            {materialIcons: "whatshot",
            name: "Уют",
            description: "Номер оснащён камином"}])
        .room__impressions
          .name-of-block Впечатления от номера
          //- .chart-container
          //-   canvas(id="myChart" width="311px" height="120px")
          .chart
            <svg width="120" height="120" viewBox="0 0 33 33">
              <defs>
                <linearGradient id="grad1" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#919191;" />
                  <stop offset="100%" style="stop-color:#3D4975;" />
                </linearGradient>
              </defs>
              <circle class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#grad1)"></circle>
              
              <defs>
                <linearGradient id="grad2" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#BC9CFF;" />
                  <stop offset="100%" style="stop-color:#8BA4F9;" />
                </linearGradient>
              </defs>
              <circle class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#grad2)"></circle>
              <defs>
                <linearGradient id="grad3" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#6FCF97;" />
                  <stop offset="100%" style="stop-color:#66D2EA;" />
                </linearGradient>
              </defs>
              <circle class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#grad3)"></circle>
              <defs>
                <linearGradient id="grad4" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#FFE39C;" />
                  <stop offset="100%" style="stop-color:#FFBA9C;" />
                </linearGradient>
              </defs>
              <circle class="unit" r="15.9" cx="50%" cy="50%" stroke="url(#grad4)"></circle>
              <g class="chart__text">
                <text x="50%" y="50%" class="chart__number">260</text>
                <text x="50%" y="50%" class="chart__label">голосов</text>
              </g>             
            </svg>
      .room__review
    +to-book