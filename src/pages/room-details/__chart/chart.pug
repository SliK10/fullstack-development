//- Формула "Окружность - общая длина всех предыдущих секторов + смещение первого сектора = смещение текущего сектора"
  options = {
    width: number,
    height: number,
    number: number,
    label: 'string',
    chart: {
      excellent: [50, 50, 75],
      good: [25, 75, 100],
      satisfactorily: [25, 75, 125],
      bad: [0, 100, 25],
    }
  }

mixin chart(options)
  .chart
    svg(width=""+options.width+"" height=""+options.height+"" viewBox="0 0 33 33")
      defs
        linearGradient(id="grad1" x1="0%" y1="0%" x2="0%" y2="100%")
          stop(offset="0%" style="stop-color:#919191;")
          stop(offset="100%" style="stop-color:#3D4975;")
      circle(class="unit" r="15.91549430918954" cx="50%" cy="50%" stroke="url(#grad1)" stroke-dasharray=""+options.chart.bad[0]+" "+options.chart.bad[1]+"" stroke-dashoffset=""+options.chart.bad[2]+"")

      defs
        linearGradient(id="grad2" x1="0%" y1="0%" x2="0%" y2="100%")
          stop(offset="0%" style="stop-color:#BC9CFF;")
          stop(offset="100%" style="stop-color:#8BA4F9;")
      circle(class="unit" r="15.91549430918954" cx="50%" cy="50%" stroke="url(#grad2)" stroke-dasharray=""+options.chart.satisfactorily[0]+" "+options.chart.satisfactorily[1]+"" stroke-dashoffset=""+options.chart.satisfactorily[2]+"")
      defs
        linearGradient(id="grad3" x1="0%" y1="0%" x2="0%" y2="100%")
          stop(offset="0%" style="stop-color:#6FCF97;")
          stop(offset="100%" style="stop-color:#66D2EA;")
      circle(class="unit" r="15.91549430918954" cx="50%" cy="50%" stroke="url(#grad3)" stroke-dasharray=""+options.chart.good[0]+" "+options.chart.good[1]+"" stroke-dashoffset=""+options.chart.good[2]+"")
      defs
        linearGradient(id="grad4" x1="0%" y1="0%" x2="0%" y2="100%")
          stop(offset="0%" style="stop-color:#FFE39C;")
          stop(offset="100%" style="stop-color:#FFBA9C;")
      circle(class="unit" r="15.91549430918954" cx="50%" cy="50%" stroke="url(#grad4)" stroke-dasharray=""+options.chart.excellent[0]+" "+options.chart.excellent[1]+"" stroke-dashoffset=""+options.chart.excellent[2]+"")
      g(class="chart__text")
        text(x="50%" y="50%" class="chart__number") 260
        text(x="50%" y="50%" class="chart__label") голосов
